{
  "hosting": {
    "public": "html",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9199,
      "host": "127.0.0.1"
    },
    "firestore": {
      "port": 8282,
      "host": "127.0.0.1"
    },
    "hosting": {
      "port": 5050,
      "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true,
      "port": 4040,
      "host": "127.0.0.1"
    }
  }
}