<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>LHubVestibular</RootNamespace>
    <AssemblyName>LHubVestibular</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <!-- Banco de dados SQLite via EF Core -->
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="9.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design"  Version="9.0.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>

    <!-- Swagger / OpenAPI -->
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />

    <!--
      PdfPig: biblioteca MIT (sem dependências nativas) para extração de texto de PDFs.
      Usada pelo PdfImportService para ler provas do ENEM, FUVEST e UNICAMP.
      https://github.com/UglyToad/PdfPig
    -->
    <PackageReference Include="PdfPig" Version="0.1.9" />
  </ItemGroup>

</Project>